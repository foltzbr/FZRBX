{
  "manifest_version": 3,
  "name": "FZRBX",
  "version": "1.0",
  "description": "Show a fake Robux value just for yourself.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.roblox.com/*"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/*"],
      "js": ["content.js"]
    }
  ]
}
